<% include ./partials/head %>
<% include ./partials/header %>





<h1 class='ui header'>Group Management</h1>
<br>

<div class="ui styled accordion" id="qus_acc">
  <div class="item">
    <div class="title">
      <div class="qus_label">
        <i class="dropdown icon"></i>
        <label>Group A</label>
      </div>
      <div class='inline fields'>
	      <div class="field" align='right'>
	        <div class="ui toggle checkbox">
	        	<input type='checkbox'>
	        	<label>Toggle Group</label>
	        </div>
	      </div>
	  </div>
    </div>
    <div class="content">
        <div class="ui form">
          <div class="grouped fields">
          	<div class='field'>
          		<div class='ui toggle checkbox'>
          			<input type='checkbox'>
          			<label>Light A1</label>
          		</div>
          	</div>
          	<div class='field'>
          		<div class='ui toggle checkbox'>
          			<input type='checkbox'>
          			<label>Light A2</label>
          		</div>
          	</div>
          <div class='field'>
          		<div class='ui toggle checkbox'>
          			<input type='checkbox'>
          			<label>Light A3</label>
          		</div>
          	</div>
          </div>
        </div>
        <div class='field' align='right'>
	      	<div class='ui icon buttons'>
	      		<button class='ui button' data-content="Add lights to group">
	      			<i class='plus square outline icon'></i>
	      		</button>
	      		<button class='ui button' data-content="Remove lights from group">
	      			<i class='minus square outline icon'></i>
	      		</button>
	      		<button class='ui button' data-content="Delete group">
	      			<i class='trash alternate outline icon'></i>
	      		</button>
	      	</div>
	      </div>
    </div>
  </div>
</div>

<script type='text/javascript' src='/js/groups.js'></script>
<% include ./partials/foot %>